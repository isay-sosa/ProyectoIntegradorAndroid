<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <TextView
        android:id="@+id/lblProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblProductBandTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lblProductName"
        android:layout_below="@id/lblProductName"
        android:text="@string/lblProductBrand_Title"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lblProductBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblProductName"
        android:layout_toRightOf="@id/lblProductBandTitle"
        android:textColor="@color/Gray_Footer"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lblProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/lblProductName"
        android:textColor="@color/Gray_Footer"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/simbol_$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblProductName"
        android:layout_toLeftOf="@id/lblProductPrice"
        android:text="@string/simbol_$"
        android:textSize="15sp" />

</RelativeLayout>