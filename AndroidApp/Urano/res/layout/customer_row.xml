<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dp" >

    <TextView
        android:id="@+id/lblCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblCustomerAddress_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/lblCustomerName"
        android:layout_below="@id/lblCustomerName"
        android:text="@string/txtAddress_Hint"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lblCustomerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblCustomerName"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/lblCustomerAddress_Title"
        android:textColor="@color/Gray_Footer"
        android:textSize="15sp" />

</RelativeLayout>